{
    "name": "benatespina/amp-twig-theme",
    "description": "AMP oriented theme for Twig template engine",
    "type": "library",
    "keywords": [
        "amp",
        "twig",
        "ampproject",
        "theme"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "benatespina",
            "email": "benatespina@gmail.com",
            "homepage": "https://benatespina.com"
        }
    ],
    "require": {
        "php": "^7.0",
        "twig/twig": "^2.0"
    },
    "require-dev": {
        "allocine/twigcs": "^2.1",
        "symfony/console": "^3.3",
        "symfony/dotenv": "^3.3",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.3",
        "symfony/twig-bundle": "^3.3",
        "symfony/web-server-bundle": "^3.3",
        "symfony/yaml": "^3.3"
    },
    "scripts": {
        "cs": [
            "vendor/bin/twigcs lint templates",
            "vendor/bin/twigcs lint tests/Application/templates"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\App\\": "tests/Application/src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
