{##
    This atom will display a form input associated error.

    @param form_error_content        html*
    @param form_error_class_name     string
#}

<p class="form-error{% if form_error_class_name|default %} {{ form_error_class_name }}{% endif %}">
    {{ form_error_content|raw }}
</p>
