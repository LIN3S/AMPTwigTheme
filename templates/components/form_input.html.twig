{##
    This atom will display a form input.

    @param form_input_type             string=text
    @param form_input_class_name       string
    @param form_input_modifiers        string
    @param form_input_placeholder      string*
    @param form_input_pattern          string
    @param form_input_id               string
    @param form_input_required         bool=false
#}

<input class="form-input{% if form_input_modifiers|default %} {{ form_input_modifiers }}{% endif %} {{ form_input_class_name }}"
       type="{{ form_input_type|default('text') }}" placeholder="{{ form_input_placeholder }}" autocomplete="off"
       {% if form_input_id|default %}id="{{ form_input_id }}" name="{{ form_input_id }}"{% endif %}
        {% if form_input_required|default %} required{% endif %}
         {% if form_input_pattern|default %} pattern="{{ form_input_pattern }}"{% endif %}/>
