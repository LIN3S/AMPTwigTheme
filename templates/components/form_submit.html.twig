{##
    A component that displays the form submit button.

    @param form_submit_class                string
    @param form_submit_disabled             boolean=false
    @param form_submit_title                string*
#}

{% set form_submit_disabled = form_submit_disabled|default(false) %}

{% set class = form_submit_class|default ? 'class=form-submit ' ~ form_submit_class : 'class=form-submit' %}
{% set disabled = form_submit_disabled ? 'disabled' %}

<input type="submit" {{ class }} {{ disabled }} value="{{ form_submit_title }}" />
